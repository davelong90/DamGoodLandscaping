---
import { site } from '../../data/site';
import { services } from '../../data/services';

const currentYear = new Date().getFullYear();

const navLinks = [
  { href: '/',          label: 'Home'      },
  { href: '/services',  label: 'Services'  },
  { href: '/portfolio', label: 'Portfolio' },
  { href: '/about',     label: 'About'     },
  { href: '/contact',   label: 'Contact'   },
];
---

<footer class="site-footer" role="contentinfo">
  <div class="container">
    <div class="footer-grid">

      <!-- Brand column -->
      <div class="footer-brand">
        <a href="/" class="footer-logo" aria-label="Dam Good Landscaping â€” Home">
          <svg width="36" height="36" viewBox="0 0 32 32" fill="none" aria-hidden="true">
            <circle cx="16" cy="16" r="16" fill="#4a8c3f"/>
            <path d="M8 22 C10 14, 16 10, 24 12" stroke="#7abe6e" stroke-width="2.5" stroke-linecap="round" fill="none"/>
            <path d="M10 24 C12 18, 16 16, 22 18" stroke="#7abe6e" stroke-width="2" stroke-linecap="round" fill="none"/>
            <circle cx="18" cy="11" r="3" fill="#2d5a27"/>
            <circle cx="22" cy="14" r="2" fill="#2d5a27"/>
            <circle cx="14" cy="12" r="2.5" fill="#2d5a27"/>
          </svg>
          <span>{site.name}</span>
        </a>
        <p class="footer-tagline">{site.tagline}</p>
        <p class="footer-area">Serving {site.serviceArea}</p>
        <div class="footer-contact-links">
          <a href={site.phoneTel}>{site.phone}</a>
          <a href={`mailto:${site.email}`}>{site.email}</a>
        </div>
      </div>

      <!-- Quick links -->
      <div>
        <h3 class="footer-heading">Quick Links</h3>
        <ul>
          {navLinks.map(link => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h3 class="footer-heading">Services</h3>
        <ul>
          {services.map(s => (
            <li><a href="/services">{s.name}</a></li>
          ))}
        </ul>
      </div>

      <!-- Hours -->
      <div>
        <h3 class="footer-heading">Hours</h3>
        <p class="footer-hours">{site.hours}</p>
        <div class="footer-cta-group">
          <a href={site.phoneTel} class="btn btn-outline-white btn-sm">Call Us</a>
          <a href={site.phoneSms} class="btn btn-outline-white btn-sm">Text Us</a>
          <a href="/contact" class="btn btn-white btn-sm">Get a Quote</a>
        </div>
      </div>

    </div>

    <hr class="footer-divider" />

    <div class="footer-bottom">
      <p>&copy; {currentYear} {site.name}. All rights reserved.</p>
      <p>Proudly serving {site.city}, {site.state} and surrounding areas.</p>
    </div>
  </div>
</footer>

<style>
  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-10);
    margin-bottom: var(--space-10);
  }

  @media (min-width: 640px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .footer-grid {
      grid-template-columns: 2fr 1fr 1fr 1.5fr;
    }
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    text-decoration: none;
    color: var(--color-white);
    font-family: var(--font-heading);
    font-weight: var(--weight-bold);
    font-size: var(--font-xl);
    margin-bottom: var(--space-4);
  }

  .footer-tagline {
    color: var(--color-green-300);
    font-size: var(--font-sm);
    margin-bottom: var(--space-2);
  }

  .footer-area {
    color: var(--color-gray-400);
    font-size: var(--font-sm);
    margin-bottom: var(--space-4);
  }

  .footer-contact-links {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .footer-heading {
    font-family: var(--font-heading);
    font-size: var(--font-sm);
    font-weight: var(--weight-bold);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-green-300);
    margin-bottom: var(--space-4);
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  ul a {
    font-size: var(--font-sm);
  }

  .footer-hours {
    color: var(--color-gray-400);
    font-size: var(--font-sm);
    margin-bottom: var(--space-5);
  }

  .footer-cta-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .footer-divider {
    border: none;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    margin-bottom: var(--space-6);
  }

  .footer-bottom {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    color: var(--color-gray-400);
    font-size: var(--font-sm);
  }

  @media (min-width: 768px) {
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
    }
  }
</style>
