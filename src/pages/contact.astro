---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/contact/ContactForm.astro';
import { site } from '../data/site';
---

<BaseLayout
  title="Contact & Free Quote"
  description={`Contact ${site.name} for a free landscaping estimate in ${site.serviceArea}. Call, text, or fill out our quick form. We respond fast.`}
>
  <!-- Page hero -->
  <section class="section section-dark contact-hero" aria-labelledby="contact-heading">
    <div class="container">
      <span class="section-label">Get In Touch</span>
      <h1 id="contact-heading">Request a Free Quote</h1>
      <p>
        Tell us about your yard and we will get back to you fast â€”
        usually within a few hours. Serving {site.serviceArea}.
      </p>
    </div>
  </section>

  <!-- Contact content -->
  <section class="section" aria-label="Contact information and form">
    <div class="container">
      <div class="contact-grid">

        <!-- Info column -->
        <aside class="contact-info">
          <h2>Other Ways to Reach Us</h2>

          <ul class="contact-methods">
            <li class="contact-method">
              <div class="contact-method-icon" aria-hidden="true">
                <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72c.127.96.361 1.903.7 2.81a2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0122 16.92z"/>
                </svg>
              </div>
              <div>
                <strong>Phone</strong>
                <a href={site.phoneTel}>{site.phone}</a>
              </div>
            </li>

            <li class="contact-method">
              <div class="contact-method-icon" aria-hidden="true">
                <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 15a2 2 0 01-2 2H7l-4 4V5a2 2 0 012-2h14a2 2 0 012 2z"/>
                </svg>
              </div>
              <div>
                <strong>Text</strong>
                <a href={site.phoneSms}>{site.phone}</a>
              </div>
            </li>

            <li class="contact-method">
              <div class="contact-method-icon" aria-hidden="true">
                <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                  <polyline points="22,6 12,13 2,6"/>
                </svg>
              </div>
              <div>
                <strong>Email</strong>
                <a href={`mailto:${site.email}`}>{site.email}</a>
              </div>
            </li>

            <li class="contact-method">
              <div class="contact-method-icon" aria-hidden="true">
                <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z"/>
                  <circle cx="12" cy="10" r="3"/>
                </svg>
              </div>
              <div>
                <strong>Service Area</strong>
                <span>{site.serviceArea}</span>
              </div>
            </li>

            <li class="contact-method">
              <div class="contact-method-icon" aria-hidden="true">
                <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"/>
                  <polyline points="12 6 12 12 16 14"/>
                </svg>
              </div>
              <div>
                <strong>Hours</strong>
                <span>{site.hours}</span>
              </div>
            </li>
          </ul>

          <div class="contact-quick-ctas">
            <a href={site.phoneTel} class="btn btn-primary">Call Now</a>
            <a href={site.phoneSms} class="btn btn-outline">Send a Text</a>
          </div>
        </aside>

        <!-- Form column -->
        <div class="contact-form-col">
          <h2>Fill Out the Form</h2>
          <p class="form-intro">
            We typically respond within a few hours. Include as much detail as you
            can and we will put together an accurate estimate.
          </p>
          <ContactForm />
        </div>

      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .contact-hero {
    padding-bottom: var(--space-16);
  }

  .contact-hero h1 {
    color: var(--color-white);
    margin-bottom: var(--space-4);
    margin-top: var(--space-3);
  }

  .contact-hero p {
    color: rgba(255,255,255,0.85);
    font-size: var(--font-lg);
    max-width: 520px;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-12);
  }

  @media (min-width: 900px) {
    .contact-grid {
      grid-template-columns: 1fr 1.6fr;
      align-items: start;
    }
  }

  .contact-info h2,
  .contact-form-col h2 {
    font-size: var(--font-2xl);
    margin-bottom: var(--space-6);
  }

  .contact-methods {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--space-8);
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
  }

  .contact-method {
    display: flex;
    gap: var(--space-4);
    align-items: flex-start;
  }

  .contact-method-icon {
    width: 44px;
    height: 44px;
    background: var(--color-green-100);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .contact-method > div:last-child {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .contact-method strong {
    font-size: var(--font-xs);
    font-weight: var(--weight-bold);
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: var(--color-text-muted);
  }

  .contact-method a,
  .contact-method span {
    font-size: var(--font-base);
    color: var(--color-text);
  }

  .contact-method a:hover {
    color: var(--color-primary);
  }

  .contact-quick-ctas {
    display: flex;
    gap: var(--space-3);
    flex-wrap: wrap;
  }

  .form-intro {
    color: var(--color-text-muted);
    margin-bottom: var(--space-8);
    line-height: var(--leading-relaxed);
  }
</style>
